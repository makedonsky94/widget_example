<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_widget_header"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_app_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:background="@drawable/bg_ripple_circle"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:src="@drawable/ic_logo_cloud" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">


        <!--            style="@style/AppTheme.Title.Widget.Light"-->
        <TextView
            android:id="@+id/widget_watchlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:lines="1"
            android:textSize="14sp"
            tools:text="Watchlist" />

        <!--        style="@style/AppTheme.Summary.Widget"-->
        <TextView
            android:id="@+id/widget_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textSize="12sp"
            tools:text="Last update: 12:00" />

    </LinearLayout>

    <ImageView
        android:id="@+id/widget_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/bg_ripple_circle"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:src="@drawable/ic_widget_update" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:indeterminateDrawable="@drawable/widget_arrows_rotation"
        android:indeterminateDuration="500"
        android:paddingHorizontal="1dp"
        android:paddingVertical="4dp"
        android:progressDrawable="@drawable/widget_arrows_rotation"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/widget_settings_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_ripple_circle"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="8dp"
        android:src="@drawable/ic_widget_settings" />

</LinearLayout>